@model List<OrderItem>

@{
	ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

@if (Model.Count > 0)
{
	<partial name="_CartItems" model="@Model" />

	<div class="row">
		<div class="col-md-4">
			<partial name="_PlaceOrderForm" model="@(new PlaceOrderModel("", "", ""))" />
		</div>
	</div>
}
else
{
	<p>Your cart is empty</p>
}

@section scripts {
	<style>
		table {
			line-height: 1;
		}

		.amount {
			display: flex;
			align-items: center;
			gap: 0.5rem;
		}

		.amount svg,
		.amount button {
			display: block;
		}
	</style>
}
